@page "/knowledgebase/{id}"
@rendermode InteractiveServer
@using IncidentAgent.Models
@using IncidentAgent.Web.Components
@inject IKnowledgeBaseService KnowledgeBaseService
@inject NavigationManager NavigationManager

<PageTitle>Knowledge Base Entry Details</PageTitle>

@if (entry == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container mt-4">
        <div class="row mb-3">
            <div class="col">
                <button class="btn btn-secondary" @onclick="GoBack">
                    <span class="bi bi-arrow-left"></span> Back to List
                </button>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3>@entry.Title</h3>
                <span class="badge bg-primary">@entry.Category</span>
            </div>
            <div class="card-body">
                <h5 class="card-title">Issue</h5>
                <p class="card-text">@entry.Issue</p>

                @if (!string.IsNullOrEmpty(entry.Solution))
                {
                    <h5 class="card-title mt-4">Solution</h5>
                    <p class="card-text">@entry.Solution</p>
                }

                @if (!string.IsNullOrEmpty(entry.Discussion))
                {
                    <h5 class="card-title mt-4">Discussion</h5>
                    <p class="card-text">@entry.Discussion</p>
                }

            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public string? Id { get; set; }

    private KnowledgeBaseEntry? entry;

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(Id))
        {
            entry = await KnowledgeBaseService.GetKnowledgeBaseEntry(Id);
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/knowledgebase");
    }
}